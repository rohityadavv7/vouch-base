generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @default(cuid()) @id
  username String 
  email String @unique
  password String
  role Role @default(ORGANIZATION)
  orgs Organisation[]
  createdAt DateTime @default(now())
}

model Organisation{
  id String @default(cuid()) @id
  name String
  description String
  location String
  testimonialsCount Int @default(0)
  testimonials Testimonial[]
  organisationToUser String
  organisationToUserId User @relation(fields: [organisationToUser], references: [id])

}

model Testimonial{
  id String @default(cuid()) @id
  author String
  content String
  rating Int @default(0)
  profileImg String?
  isVerified Boolean @default(false)
  testimonialToOrg String
  testimonialToOrgId Organisation @relation(fields: [testimonialToOrg], references: [id])
  
  
}

enum Role{
  ORGANIZATION
  ADMIN
}
